{
  // "extends": "./tsconfig.json", // Diese Zeile MUSS entfernt sein
  "compilerOptions": {
    "target": "ES2020",
    "allowArbitraryExtensions": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
    
    // "types": ["node"] // Diese Zeile wurde entfernt, da sie hier nicht unbedingt ben√∂tigt wird und Konflikte verursachen kann
  },
  "include": ["src"] 
}
